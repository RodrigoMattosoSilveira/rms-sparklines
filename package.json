{
   "name": "rms-sparklines",
   "version": "0.3.0-rc.1",
   "scripts": {
      "build": "ng build",
      "e2e": "ng e2e --port 4201",
      "lint": "ng lint",
      "ng": "ng",
      "reset": "rm -rf node_modules && yarn install && yarn lib:build && yarn lsg:build",
      "test": "ng test",
      "test:all": "ng test living-style-guide --watch=false && ng e2e",

      "lib:build": "ng build library",
      "lib:files": "yarn lib:license && yarn lib:readme",
      "lib:license": "cp ./projects/library/LICENSE ./dist/library",
      "lib:pack": "cd dist/library && npm pack",
      "lib:readme": "cp .//projects/library/README.md ./dist/library",
      "lib:ready": "yarn lib:build && yarn lib:files && yarn lib:pack",
      "lib:test": "ng test library",

      "lsg:build": "ng build living-style-guide",
      "lsg:serve": "ng serve living-style-guide --port 4201",
      "lsg:serve:lib": "yarn lib:build && yarn lsg:serve",
      "lsg:serve:aot": "ng serve living-style-guide --port 4201 --aot=true",
      "lsg:serve:jit": "ng serve living-style-guide --port 4201 --aot=false",
      "lsg:test": "ng test living-style-guide"
   },
   "private": true,
   "dependencies": {
      "@angular/animations": "^7.2.15",
      "@angular/cdk": "^7.3.7",
      "@angular/common": "~7.2.0",
      "@angular/compiler": "~7.2.0",
      "@angular/core": "~7.2.0",
      "@angular/forms": "~7.2.0",
      "@angular/http": "^7.2.15",
      "@angular/material": "^7.3.7",
      "@angular/platform-browser": "~7.2.0",
      "@angular/platform-browser-dynamic": "~7.2.0",
      "@angular/router": "~7.2.0",
      "@types/mathjs": "^5.0.1",
      "core-js": "^2.5.4",
      "karma-mocha-reporter": "^2.2.5",
      "mathjs": "^6.0.2",
      "ngx-markdown": "^7.1.5",
      "rxjs": "~6.3.3",
      "zone.js": "~0.8.26"
   },
   "devDependencies": {
      "@angular-devkit/build-angular": "~0.13.0",
      "@angular-devkit/build-ng-packagr": "~0.13.0",
      "@angular/cli": "~7.3.7",
      "@angular/compiler-cli": "~7.2.0",
      "@angular/language-service": "~7.2.0",
      "@types/jasmine": "~2.8.8",
      "@types/jasminewd2": "~2.0.3",
      "@types/node": "~8.9.4",
      "codelyzer": "~4.5.0",
      "jasmine-core": "~2.99.1",
      "jasmine-spec-reporter": "~4.2.1",
      "karma": "~4.0.0",
      "karma-chrome-launcher": "~2.2.0",
      "karma-coverage-istanbul-reporter": "~2.0.1",
      "karma-jasmine": "~1.1.2",
      "karma-jasmine-html-reporter": "^0.2.2",
      "ng-packagr": "^4.2.0",
      "protractor": "~5.4.0",
      "ts-node": "~7.0.0",
      "tsickle": ">=0.34.0",
      "tslib": "^1.10.0",
      "tslint": "~5.11.0",
      "ts-md5": "^1.2.4",
      "typescript": "~3.2.2"
   }
`}
